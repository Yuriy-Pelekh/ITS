<Window x:Class="SupplyChain.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loczal="clr-namespace:SupplyChain"
        mc:Ignorable="d"
        ResizeMode="NoResize" Background="LightGray" WindowStartupLocation="CenterScreen"
        Title="Start page" Height="500" Width="450" Icon="Icons/default icon.ico">
    
    <Grid x:Name="__">
        <StackPanel VerticalAlignment="Center" >
            <Image Source="Icons/earth.png" Height="100" Width="100">
 
            </Image>
            <TextBlock FontSize="30" Foreground="White" TextAlignment="Center">
                
                Splash Screen
            </TextBlock>
            <TextBlock FontSize="15" Foreground="Black" TextAlignment="Center" >
                 Hello World
                
            </TextBlock>

        </StackPanel>
    </Grid>
    
</Window>
